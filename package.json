  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@tsconfig/recommended": "^1.0.7",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
    "typescript": "<5.6.0",
    "typescript-eslint": "^8.9.0"
  }
}
